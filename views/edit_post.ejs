<%- include("partials/headblock.ejs") -%>
<%- include("partials/navbar.ejs") -%>
<body>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
                <form method="post" action="/posts/<%- post['id_post'] %>/edit">
                    <div class="form-group">
                        <label for="name">Title</label>
                        <input type="text" name="title" class="form-control" id="title"
                               placeholder="Css 3" value="<%- post['title'] %>" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Author</label>
                        <input type="text" name="author" class="form-control" id="author"
                               placeholder="John" value="<%- post['author'] %>" required>
                    </div>
                    <div class="form-group">
                        <label for="category">Game</label>
                        <input type="text" name="category" class="form-control" id="category"
                               placeholder="PUBG" value="<%- post['category'] %>" required>
                    </div>
                    <div class="form-group">
                        <label for="message">Body</label>
                        <textarea name="body" class="form-control" id="body" rows="3"
                                  required><%- post['body'] %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Update Post</button>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include("partials/script.ejs") -%>
</body>
</html>