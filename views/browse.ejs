<%- include("partials/headblock.ejs") -%>
<%- include("partials/navbar.ejs") -%>
<body>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
                <!-- ***** Most Popular Start ***** -->
                <div class="posts">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="heading-section">
                                <h4><em>All Posts</em> Of The Site</h4>
                            </div>
                            <div class="browse-row">
                                <% posts.forEach (function (post) { %>
                                    <div class="col-lg-3 col-sm-6">
                                        <div class="item">
                                            <h3>
                                                Title: <%- post["title"] %>
                                            </h3>
                                            <h4 id="purple">
                                                Game: <%- post["category"] %>
                                            </h4>
                                            <p>
                                                <%- post["body"] %>
                                            </p>
                                            <a id="show-post" href="/posts/<%- post["id_post"] %>/show_post">Show post</a>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ***** Most Popular End ***** -->
            </div>
        </div>
    </div>
</div>
<%- include("partials/script.ejs") -%>
</body>
</html>